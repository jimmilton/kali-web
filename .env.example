# Database
DATABASE_URL=postgresql://user:password@postgres:5432/kali_tools
POSTGRES_USER=user
POSTGRES_PASSWORD=change-this-password
POSTGRES_DB=kali_tools

# Redis
REDIS_URL=redis://redis:6379/0

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=change-this-access-key
MINIO_SECRET_KEY=change-this-secret-key
MINIO_BUCKET=kali-tools

# JWT Authentication
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=generate-a-secure-random-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application
DEBUG=false
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost,http://localhost:3000

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# Tool Execution
TOOL_TIMEOUT_DEFAULT=3600
TOOL_MAX_MEMORY=2g
TOOL_MAX_CPUS=2
DOCKER_NETWORK=kali-network

# Encryption (for credential storage)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=generate-a-fernet-key

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Email (optional, for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# Integrations (optional)
JIRA_URL=
JIRA_USER=
JIRA_API_TOKEN=
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
